<div class="wrapper hero p-12">
  <%= image_tag('kateisaien.png') %>

    <div class="hero-content flex-col">
      <div class="p-2 text-center my-4">
        <h1 class="text-xl text-green-500"><%= 'さあ、家庭菜園をはじめましょう。' %></h1>
      </div>
      <div class="w-full max-w-xs">
        <div class="bg-white bg-opacity-90 shadow-md rounded px-8 pt-6 pb-8 mb-4">
          <%= form_with url: login_path do |f| %>
          <div class="mb-3">
            <%= f.label :email, class: 'block text-gray-700 text-sm font-bold mb-2' %>
            <%= f.email_field :email, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', id: "username", type: "text", placeholder: "メールアドレス" %>
          </div>
          <div class="mb-3">
            <%= f.label :password, class: 'block text-gray-700 text-sm font-bold mb-2' %>
            <%= f.password_field :password, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline", id: "password", type: "password", placeholder: "パスワード" %>
          </div>
          <div class="form-control my-4">
            <%= f.submit 'ログイン', class: 'py-3 px-4 inline-flex
            justify-center items-center gap-2 rounded-md border
            border-transparent font-semibold text-green-900 hover:bg-green-300
            focus:outline-none focus:ring-2 focus:ring-green-500
            focus:ring-offset-2 transition-all text-sm
            dark:focus:ring-offset-gray-800' %>
          </div>
          <% end %>
          <div class="text-center">
            <%= link_to 'アカウント作成', signup_path, class: "link" %>
            <br />
            <p>
              パスワードをお忘れの方は<%= link_to "こちら",
              new_password_reset_path, class: "link " %>
            </p>
            <p></p>
          </div>
        </div>
      </div>
    </div>
</div>
