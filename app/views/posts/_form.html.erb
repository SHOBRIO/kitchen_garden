<%= form_with model: post do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="mb-3">
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control w-full', rows: 3 %>
  </div>

  <div class="flex justify-end">
    <%= f.submit class: 'btn btn-primary' %>
  </div>

<% end %>
