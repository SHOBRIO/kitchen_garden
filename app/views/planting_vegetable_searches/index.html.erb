<div class="container">
  <div class="flex flex-wrap">
    <% @vegetables.each do |vegetable| %>
    <div class="w-1/3 p-2">
      <%= link_to planting_vegetable_search_path(vegetable.id), class: 'flex justify-center flex-col items-center btn-primary bg-green-500 rounded-lg p-3 hover:bg-green-300' do %>
        <p class="flex-shrink-0 font-bold"><%= vegetable.name %></p>
          <% if vegetable.image.attached? %>
            <%= image_tag vegetable.image, class: "w-full" %>
          <% else %>
            <%= image_tag ('no_image_square.jpg'), class: "w-full" %>
          <% end %>
      <% end %>
      </div>
    <% end %>
  </div>
</div>
