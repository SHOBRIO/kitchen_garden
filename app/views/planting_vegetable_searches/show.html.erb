<div class="wrapper">
  <div class="container">
    <div class="flex justify-between mt-3 mb-3">
      <%= link_to "戻る", planting_vegetable_searches_path, class: 'flex items-center btn-primary rounded-lg p-3' %>
      <%= button_to '登録', planting_vegetable_searches_path(vegetable_id: @vegetable.id), method: :post, class: 'flex items-center btn-primary rounded-lg p-3' %>
    </div>
    <div class="flex justify-between container">
      <div class="w-1/3">
      <% @guides.each do |guide| %>
          <div class="border border-gray-400 rounded-lg p-4 text-center">
              <h3 class="text-lg font-bold mb-2">種まき</h3>
              <p class="mb-3"><%= guide.sowing_month %></p>
              <h3 class="text-lg font-bold mb-2">苗植え</h3>
              <p class="mb-3"><%= guide.planting_month %></p>
              <h3 class="text-lg font-bold mb-2">収穫</h3>
              <p class="mb-3"><%= guide.harvesting_month %></p>
              <h3 class="text-lg font-bold mb-2">難易度</h3>
              <p>★<%= guide.difficulty %></p>
          </div>
      <% end %>
      </div>
      <div class="w-1/3 p-3">
        <h2 class="flex justify-center items-center text-2xl font-bold mb-4"><%= @vegetable.name %></h2>
        <% if @vegetable.image.attached? %>
            <%= image_tag @vegetable.image, class: "w-full" %>
        <% else %>
            <%= image_tag ('no_image_tate.jpg'), class: "w-full" %>
        <% end %>
      </div>
      <div class="w-1/3 border border-gray-400 rounded-lg p-6">
        <div class="py-8">
          <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-xl font-bold mb-4 text-center">選んでいるユーザー</h2>
            <ul class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <% @users.each do |user| %>
                <li class="border border-gray-300 rounded-lg py-4 px-6 flex items-center justify-center text-lg">
                  <%= user.profile.name %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>      
      </div>
    </div>
  </div>
</div>
