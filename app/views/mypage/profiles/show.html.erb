<div class="container mx-auto max-w-lg mt-10">
  <div class="bg-white p-6 rounded-lg shadow-lg">
  <%= form_with model: @profile, url: mypage_profile_path, html: { multipart: true }, class: "max-w-lg mx-auto my-4" do |f| %>
    <div class="mb-4">
      <%= f.label :name, class: "block font-medium text-gray-700 mb-2" %>
      <%= f.text_field :name, value: current_user.profile.name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
  
    <div class="mb-4">
      <%= f.label :avatar, class: "block font-medium text-gray-700 mb-2" %>
      <%= f.file_field :avatar, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
  
    <div class="flex justify-end">
      <%= f.submit "Update Profile", class: 'btn btn-primary' %>
    </div>
  <% end %>
  </div>
</div>